{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "aalmeida88/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "aalmeida88/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "aalmeida88/multi-worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "aalmeida88/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["server", "client"]
        }
    ]
}